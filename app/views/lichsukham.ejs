<script>
if (window.XMLHttpRequest)
            {
                // code for IE7+, Firefox, Chrome, Opera, Safari
                xmlhttp=new XMLHttpRequest();
            } else {
                // code for IE6, IE5
                xmlhttp=new ActiveXObject("Microsoft.XMLHTTP");
            }

    xmlhttp.onreadystatechange=function() {
    if (xmlhttp.readyState == 4 && xmlhttp.status == 200) {
        myFunction(xmlhttp.responseText);
    }
}
xmlhttp.open("GET", '/lichsukham', true);
xmlhttp.send();

function myFunction(response) {
    var arr = JSON.parse(response);
    var i;
    var out = "<h3> Danh sách lịch sử khám </h3> <table border='1' ><tr><td cols='50'>Ngày khám</td><td>Phòng khám</td><td>Nội dung khám</td><td>Kết quả</td></tr>";

    for(i = 0; i < arr.length; i++)
         {
             out += "<tr><td>" +
             arr[i].date +
               "</td><td>" +
             arr[i].place +
               "</td><td>" +
             arr[i].info +
               "</td></tr>";
          }
    out += "</table>";
    document.getElementById("main-right").innerHTML = out;
}
</script>


